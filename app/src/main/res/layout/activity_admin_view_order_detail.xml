<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminOrderDetailActivity">

    <TextView
        android:id="@+id/textViewOrderDetailTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Details"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/textViewOrderDetailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order Detail ID: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailTitle"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewOrderDetailIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailTitle"
        app:layout_constraintStart_toEndOf="@id/textViewOrderDetailId"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewProductId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product ID: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewProductIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P12345"
        app:layout_constraintTop_toBottomOf="@id/textViewOrderDetailId"
        app:layout_constraintStart_toEndOf="@id/textViewProductId"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewProductId"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewQuantityValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        app:layout_constraintTop_toBottomOf="@id/textViewProductId"
        app:layout_constraintStart_toEndOf="@id/textViewQuantity"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewQuantity"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$100.00"
        app:layout_constraintTop_toBottomOf="@id/textViewQuantity"
        app:layout_constraintStart_toEndOf="@id/textViewPrice"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/textViewOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: "
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/textViewPrice"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewOrderIdValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12345"
        app:layout_constraintTop_toBottomOf="@id/textViewPrice"
        app:layout_constraintStart_toEndOf="@id/textViewOrderId"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
